<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MsgView">
        <attr name="mv_backgroundColor" format="color" />
        <attr name="mv_cornerRadius" format="dimension" />
        <attr name="mv_strokeWidth" format="dimension" />
        <attr name="mv_strokeColor" format="color" />
        <attr name="mv_isRadiusHalfHeight" format="boolean" />
        <attr name="mv_isWidthHeightEqual" format="boolean" />
    </declare-styleable>
    <declare-styleable name="LqhTabLayout">
        <attr name="lqh_scroll_mode" format="boolean"></attr>
        <attr name="lqh_space_equal" format="boolean"></attr>
            <!--全局Tabitem设置-->
        <!--默认状态下的文字颜色-->
        <attr name="lqh_itemNormalTextColor" format="color"/>
        <!--选中状态下的文字颜色-->
        <attr name="lqh_itemSelectedColor" format="color"/>
        <!--默认状态下的大小-->
        <attr name="lqh_itemNormalTextSize" format="dimension"/>
        <!--选中状态下的文字大小-->
        <attr name="lqh_itemSelectedTextSize" format="dimension"/>
        <!--设置未读数字体大小-->
        <attr name="lqh_itemUnreadTextSize" format="dimension"/>
        <!--设置未读数字体颜色-->
        <attr name="lqh_itemUnreadTextColor" format="reference"/>
        <!--设置未读数背景色-->
        <attr name="lqh_itemUnreadTextBg" format="color|reference"/>
        <!--文字和图标的顶部距离-->
        <attr name="lqh_itemIconMargin" format="dimension"/>
        <!--上下padding-->
        <attr name="lqh_itemContentPadTB" format="dimension"/>
        <!--左右padding-->
        <attr name="lqh_itemPadContentLR" format="dimension"/>

        <!--设置显示器-->
        <attr name="lqh_indicator_color"></attr>
        <attr name="lqh_indicator_height"></attr>
        <attr name="lqh_indicator_width"></attr>
        <attr name="lqh_indicator_margin_left"/>
        <attr name="lqh_indicator_margin_top"/>
        <attr name="lqh_indicator_margin_right"/>
        <attr name="lqh_indicator_margin_bottom"/>
        <attr name="lqh_indicator_corner_radius"/>
        <attr name="lqh_indicator_anim_enable"/>
    </declare-styleable>
    <attr name="lqh_indicator_color" format="color"></attr>
    <attr name="lqh_indicator_height" format="dimension"></attr>
    <attr name="lqh_indicator_width" format="dimension"></attr>
    <!-- 设置显示器margin,当indicator_width大于0,无效 -->
    <attr name="lqh_indicator_margin_left" format="dimension"/>
    <attr name="lqh_indicator_margin_top" format="dimension"/>
    <attr name="lqh_indicator_margin_right" format="dimension"/>
    <attr name="lqh_indicator_margin_bottom" format="dimension"/>
    <!-- 设置显示器圆角弧度-->
    <attr name="lqh_indicator_corner_radius" format="dimension"/>
    <attr name="lqh_indicator_anim_enable" format="boolean"/>
    <declare-styleable name="LqhTabItemView">
        <!--默认状态下的图标-->
        <attr name="itemNormalIcon" format="reference"/>
        <!--选中状态下的图标-->
        <attr name="itemSelectedIcon" format="reference"/>
        <attr name="itemText" format="string"></attr>
        <!--默认状态下的文字颜色-->
        <attr name="itemNormalTextColor" format="color"/>
        <!--选中状态下的文字颜色-->
        <attr name="itemSelectedColor" format="color"/>
        <!--默认状态下的大小-->
        <attr name="itemNormalTextSize" format="dimension"/>
        <!--选中状态下的文字大小-->
        <attr name="itemSelectedTextSize" format="dimension"/>
        <!--设置未读数字体大小-->
        <attr name="itemUnreadTextSize" format="dimension"/>
        <!--设置未读数字体颜色-->
        <attr name="itemUnreadTextColor" format="reference"/>
        <!--设置未读数背景色-->
        <attr name="itemUnreadTextBg" format="color|reference"/>
        <!--文字和图标的顶部距离-->
        <attr name="itemIconMargin" format="dimension"/>
        <!--上下padding-->
        <attr name="itemContentPadTB" format="dimension"/>
        <!--左右padding-->
        <attr name="itemPadContentLR" format="dimension"/>
    </declare-styleable>
</resources>